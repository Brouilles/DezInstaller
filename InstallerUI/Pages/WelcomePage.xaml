<Page x:Class="InstallerUI.Pages.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InstallerUI.Pages"
             xmlns:p="clr-namespace:InstallerUI.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="588"
             Title="WelcomePage" Height="371" Loaded="Page_Loaded">
    <StackPanel Margin="10">
        <TextBlock Margin="0,10,0,0" FontSize="24" FontWeight="Bold" Foreground="White">
            <Run Text="Welcome to the"/>
            <Run Text="{x:Static p:Resource.APP_NAME}"/>
            <Run Text="Setup Wizard"/>
        </TextBlock>
        <TextBlock Margin="0,10,0,0" Foreground="White">
            <Run Text="This will install"/>
            <Run Text="{x:Static p:Resource.APP_NAME}"/>
            <Run Text="on your computer."/>
        </TextBlock>
        <TextBlock Margin="0,10,0,0" Text="It is recommended that you close all other applications before continuing." Foreground="White" />
        <TextBlock Margin="0,10,0,0" Text="Click Next to continue, or Cancel to exit Setup." Foreground="White" />
    </StackPanel>
</Page>
